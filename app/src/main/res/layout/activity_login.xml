<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context="com.example.android.firstapplication.LoginActivity"
    android:background="#2a1759" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:src="@drawable/timeline_dark"
        app:civ_border_width="2dp"
        app:civ_border_color="#311f71" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username_field"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp"
            android:hint="@string/prompt_username"
            android:inputType="text" />

        <EditText
            android:id="@+id/password_field"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/activity_padding"
            android:backgroundTint="#FFF"
            android:drawableLeft="@drawable/ic_lock_open_white_24dp"
            android:hint="@string/prompt_password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="#a667ae"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/action_sign_in"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/register_text"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/register_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/action_register"
            android:textAllCaps="true"
            android:textColor="#a667ae"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
